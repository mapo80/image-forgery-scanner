@page
@model ImageForensic.Api.Pages.IndexModel
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <title>Analisi immagine</title>
</head>
<body>
<h1>Analisi immagine</h1>

<form method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Image">Immagine</label>
        <input asp-for="Image" type="file" />
    </div>

    <fieldset>
        <legend>Controllo ELA</legend>
        <label asp-for="Options.ElaQuality"></label>
        <input asp-for="Options.ElaQuality" type="number" />
    </fieldset>

    <fieldset>
        <legend>Controllo Copy-Move</legend>
        <label asp-for="Options.CopyMoveFeatureCount"></label>
        <input asp-for="Options.CopyMoveFeatureCount" type="number" />
        <label asp-for="Options.CopyMoveMatchDistance"></label>
        <input asp-for="Options.CopyMoveMatchDistance" type="number" step="0.1" />
        <label asp-for="Options.CopyMoveRansacReproj"></label>
        <input asp-for="Options.CopyMoveRansacReproj" type="number" step="0.1" />
        <label asp-for="Options.CopyMoveRansacProb"></label>
        <input asp-for="Options.CopyMoveRansacProb" type="number" step="0.01" />
    </fieldset>

    <fieldset>
        <legend>Controllo Splicing</legend>
        <label asp-for="Options.SplicingInputWidth"></label>
        <input asp-for="Options.SplicingInputWidth" type="number" />
        <label asp-for="Options.SplicingInputHeight"></label>
        <input asp-for="Options.SplicingInputHeight" type="number" />
    </fieldset>

    <fieldset>
        <legend>Controllo Noiseprint</legend>
        <label asp-for="Options.NoiseprintInputSize"></label>
        <input asp-for="Options.NoiseprintInputSize" type="number" />
    </fieldset>

    <fieldset>
        <legend>Metadati</legend>
        <label asp-for="Options.ExpectedCameraModels"></label>
        <input asp-for="Options.ExpectedCameraModels" />
    </fieldset>

    <fieldset>
        <legend>Pesi</legend>
        <label asp-for="Options.ElaWeight"></label>
        <input asp-for="Options.ElaWeight" type="number" step="0.1" />
        <label asp-for="Options.CopyMoveWeight"></label>
        <input asp-for="Options.CopyMoveWeight" type="number" step="0.1" />
        <label asp-for="Options.SplicingWeight"></label>
        <input asp-for="Options.SplicingWeight" type="number" step="0.1" />
        <label asp-for="Options.InpaintingWeight"></label>
        <input asp-for="Options.InpaintingWeight" type="number" step="0.1" />
        <label asp-for="Options.ExifWeight"></label>
        <input asp-for="Options.ExifWeight" type="number" step="0.1" />
    </fieldset>

    <fieldset>
        <legend>Soglie</legend>
        <label asp-for="Options.CleanThreshold"></label>
        <input asp-for="Options.CleanThreshold" type="number" step="0.01" />
        <label asp-for="Options.TamperedThreshold"></label>
        <input asp-for="Options.TamperedThreshold" type="number" step="0.01" />
    </fieldset>

    <fieldset>
        <legend>Altre opzioni</legend>
        <label asp-for="Options.EnabledChecks"></label>
        <input asp-for="Options.EnabledChecks" />
        <label asp-for="Options.MaxParallelChecks"></label>
        <input asp-for="Options.MaxParallelChecks" type="number" />
    </fieldset>

    <button type="submit">Analizza</button>
</form>

@if (Model.Result != null)
{
    <h2>Risultato: @Model.Result.Verdict</h2>
    <p>Punteggio totale: @Model.Result.TotalScore.ToString("F2")</p>
    <div>
        <h3>ELA</h3>
        <p>Punteggio: @Model.Result.ElaScore.ToString("F2")</p>
        <img src="data:image/png;base64,@Model.ElaMapBase64" alt="Mappa ELA" />
    </div>
    <div>
        <h3>Copy-Move</h3>
        <p>Punteggio: @Model.Result.CopyMoveScore.ToString("F2")</p>
        <img src="data:image/png;base64,@Model.CopyMoveMapBase64" alt="Copy-Move" />
    </div>
    @if (!string.IsNullOrEmpty(Model.SplicingMapBase64))
    {
        <div>
            <h3>Splicing</h3>
            <p>Punteggio: @Model.Result.SplicingScore.ToString("F2")</p>
            <img src="data:image/png;base64,@Model.SplicingMapBase64" alt="Splicing" />
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.InpaintingMapBase64))
    {
        <div>
            <h3>Inpainting</h3>
            <p>Punteggio: @Model.Result.InpaintingScore.ToString("F2")</p>
            <img src="data:image/png;base64,@Model.InpaintingMapBase64" alt="Inpainting" />
        </div>
    }
    @if (Model.Result.ExifAnomalies.Count > 0)
    {
        <div>
            <h3>EXIF</h3>
            <p>Punteggio: @Model.Result.ExifScore.ToString("F2")</p>
            <ul>
            @foreach (var kv in Model.Result.ExifAnomalies)
            {
                <li>@kv.Key: @kv.Value</li>
            }
            </ul>
        </div>
    }
}
</body>
</html>
